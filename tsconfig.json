{
    "extends": "@oleg-ch/tsconfig",
    "include": ["src"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"],
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2020",

        "skipLibCheck": true,

        // Overwrites for @oleg-ch/tsconfig:
        "noEmit": false,
        "removeComments": false,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react"
    }
}
